<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@color/white"
	android:layout_height="fill_parent"
	android:id="@+id/contentPane"
	android:layout_width="fill_parent"
	android:orientation="vertical">
	
	<RelativeLayout
	    android:id="@+id/linearLayout5"
	    android:background="@color/background_purple"
	    android:layout_width="fill_parent"
	    android:layout_height="50dp" >

		<TextView
		    android:id="@+id/textViewTitle"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true"
			android:text="Handy"
			android:textStyle="bold"
			android:textColor="@color/black"
			android:textSize="30sp" />
		
	</RelativeLayout>
	
	<RelativeLayout
		android:layout_height="fill_parent"
		android:id="@+id/relativeLayout2"
		android:layout_width="fill_parent">
		
		<ScrollView
			android:id="@+id/scrollView1"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:scrollbars="none"
			android:layout_margin="10dp"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true">
			
			<LinearLayout
				android:orientation="vertical"
				android:layout_height="wrap_content"
				android:id="@+id/linearLayout1"
				android:layout_marginTop="10dp"
				android:layout_width="fill_parent">
				
			    <TextView 
			   	    android:id="@+id/textViewLabel1"
			   	    android:layout_width="wrap_content"
			   	    android:layout_height="wrap_content"
			   	    android:text="Star Rating:"
			   	    android:textColor="@color/black"
			   	    android:textStyle="bold"
			   	    android:textSize="18sp"/>
				
			   	<RatingBar
		    		android:id="@+id/ratingBar"
		    		android:stepSize="1"
		    		android:layout_marginTop="5dp"
		    		android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"/>
			   	
			   	<TextView 
			   	    android:id="@+id/textViewLabel2"
			   	    android:layout_width="wrap_content"
			   	    android:layout_height="wrap_content"
			   	    android:text="Submit By:"
			   	    android:textColor="@color/black"
			   	    android:textStyle="bold"
			   	    android:layout_marginTop="15dp"
			   	    android:textSize="18sp"/>
			   	
			   	<EditText 
			   	    android:layout_width="match_parent"
			   	    android:layout_height="wrap_content"
			   	    android:id="@+id/editTextSubmitBy"
			   	    android:paddingLeft="10dp"
			   	    android:paddingRight="10dp"
			   	    android:inputType="textCapSentences"
			   	    android:hint="Name"
			   	    android:maxLines="1"
			   	    android:layout_marginTop="5dp"
			   	    android:background="@drawable/edittext_default_bg"/>
			   	
			  	<TextView 
			   	    android:id="@+id/textViewLabel3"
			   	    android:layout_width="wrap_content"
			   	    android:layout_height="wrap_content"
			   	    android:text="Comments:"
			   	    android:textColor="@color/black"
			   	    android:textStyle="bold"
			   	    android:layout_marginTop="15dp"
			   	    android:textSize="18sp"/>"
				
				<EditText
					android:layout_height="150dp"
					android:layout_marginTop="5dp"
					android:layout_width="match_parent"
					android:background="@drawable/edittext_default_bg"
					android:gravity="top|left"
					android:padding="10dp"
					android:hint="Comments about this service provider"
					android:id="@+id/editTextReview" />
				
				<Button
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:textColor="@color/white"
					android:textSize="14sp"
					android:textStyle="bold"
					android:layout_width="match_parent"
					android:layout_marginTop="15dp"
					android:text="Submit" 
					android:id="@+id/btnSubmit"/>
				
			</LinearLayout>
			
		</ScrollView>
		
	</RelativeLayout>
	
</LinearLayout>